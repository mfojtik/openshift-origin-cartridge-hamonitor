environment 'production'
pidfile "#{ENV['OPENSHIFT_HAMONITOR_DIR']}run/puma.pid"
stdout_redirect "#{OPENSHIFT_HAMONITOR_DIR}log/puma_stdout.log", "#{OPENSHIFT_HAMONITOR_DIR}log/puma_stderr.log"
threads 0, 4
bind "tcp://#{ENV['OPENSHIFT_HAMONITOR_HTTP_IP']}:#{ENV['OPENSHIFT_HAMONITOR_WEB_PORT']}"
dir "#{OPENSHIFT_HAMONITOR_DIR}"
daemonize
