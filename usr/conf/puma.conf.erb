environment 'production'
pidfile "<%=ENV['OPENSHIFT_HAMONITOR_DIR']%>run/puma.pid"
stdout_redirect "<%=ENV['OPENSHIFT_HAMONITOR_DIR']%>log/puma_stdout.log", "<%=ENV['OPENSHIFT_HAMONITOR_DIR']%>log/puma_stderr.log"
bind "tcp://<%=ENV['OPENSHIFT_HAMONITOR_HTTP_IP']%>:<%=ENV['OPENSHIFT_HAMONITOR_WEB_PORT']%>"
daemonize
